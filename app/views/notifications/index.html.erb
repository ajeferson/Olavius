<h3>Notificações</h3>

<% if @notifications.any? %>

    <ul>

      <% @notifications.each do |notification| %>
      <li>
        <%= image_tag notification.image_url, height: 50 %>
        <%= link_to notification.target_name, polymorphic_path(notification.notifiable) %> <%= notification.message %>
        <strong><%= notification.time %></strong>
      </li>
      <% end %>

    </ul>


<% else %>

    <%= render partial: 'layouts/none', locals: {message: 'Nenhuma notificação'} %>

<% end %>