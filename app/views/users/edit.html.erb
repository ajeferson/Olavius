<h1>Editar Perfil</h1>

<%= form_for @user, url: {action: :update, method: :patch} do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <div>
      <%= f.label :profile_picture %>
      <%= f.file_field :profile_picture %>
      <p>
        <%= image_tag @user.profile_picture, height: 100 if @user.profile_picture? %>
      </p>
      <%= f.hidden_field :profile_picture_cache %>
    </div>

    <div>
      <%= f.submit 'Salvar' %>
    </div>

<% end %>