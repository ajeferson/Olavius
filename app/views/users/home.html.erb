<div class="col-lg-12 main-chart">

  <div class="col-lg-8 col-md-4 col-sm-4 mb">

  <%= form_for Post.new, url: user_posts_path(current_user), remote: true do |f| %>
      <%= f.text_area :title, placeholder: 'O que você está pensando?', class:'form-control home-form-margin',required: true %>
      <%= f.submit 'Publicar', class: 'btn btn-sm btn-primary home-right-button' %>
  <% end %>

  <%= form_for Image.new, url: '/', multipart: true, remote: true do |f| %>
      <%= file_field_tag 'image[image]', multiple: true %>
  <% end %>


    </div>


<style>

  .home-right-button{
    float:right;
  }
  .home-form-margin{
    margin-bottom:10px;
  }

</style>
