<h6><%= pluralize post.likes.count, 'curtida', 'curtidas' %></h6>

<div class="action">
  <% if current_user.liked?(post) %>
      <%= link_to 'Descurtir', like_path(current_user.like_for(post)), method: :delete, remote: true %>
  <% else %>
      <%= link_to 'Curtir', post_likes_path(post), method: :post, remote: true %>
  <% end %>
</div>