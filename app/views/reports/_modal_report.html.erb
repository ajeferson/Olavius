<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modal_report_<%= post.id %>" class="modal fade">

  <div class="modal-dialog">

    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Reportar publicação</h4>
      </div>

      <%= form_for post.reports.build, url: post_reports_path(post), method: :post, remote: true do |f| %>

          <div class="modal-body">

            <div class="messages"></div>

            <%= f.label :reason %>
            <%= f.select :reason,  nil, {include_blank: 'Selecione uma opção'}, class: 'bs-select form-control', required: true do %>
                <%= options_for_select Report.reasons_options_for_select %>
            <% end %>

            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control placeholder-no-fix', placeholder: 'Descrição' %>

          </div>

          <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
            <%= f.submit 'Enviar', class: 'btn btn-theme' %>
          </div>

      <% end %>

    </div>

  </div>

</div>