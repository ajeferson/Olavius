<h3>
  <% if @group.persisted? %>
      Editar Grupo
  <% else %>
      Novo grupo
  <% end %>
</h3>

<%= form_for @group,
             url: @group.persisted? ? group_path(@group) : user_groups_path(current_user),
             method: @group.persisted? ? :patch : :post do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true %>

    <%= f.label :description %>
    <%= f.text_area :description, required: true %>

    <%= f.submit 'Salvar' %>

<% end %>