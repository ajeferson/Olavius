<div class="join-actions">
  <% unless current_user.owner_of?(@group) %>
      <% if current_user.member_of?(@group) %>
          <%= link_to 'Deixar grupo', leave_group_path(@group), method: :delete, class: 'btn btn-danger', remote: true %>
      <% else %>
          <%= link_to 'Ingressar no grupo', join_group_path(@group), method: :post, class: 'btn btn-primary', remote: true %>
      <% end %>
  <% end %>
</div>

<div class="members">
  <% if current_user.related_to?(@group) %>
      <%= link_to "Membros(#{@group.users.count + 1})", members_group_path(@group) %>
  <% end %>
</div>

<%= form_for Post.new, url: user_posts_path(current_user), remote: true do |f| %>
    <%= f.hidden_field :group_id, value: @group.id %>
    <%= f.text_area :title, placeholder: 'O que você está pensando?', required: true %>
    <%= f.submit 'Publicar', class: 'btn btn-sm btn-primary' %>
<% end %>

<%= form_for Image.new, url: '/', multipart: true, remote: true do |f| %>
    <%= file_field_tag 'image[image]', multiple: true %>
<% end %>

<div class="posts"></div>