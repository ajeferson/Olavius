<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-login'}) do |f| %>

    <h2 class="form-login-heading">Entrar Agora</h2>

    <!--Login Form-->
    <div class="login-wrap">

      <%= render 'layouts/flash_error' %>
      <%= render 'layouts/flash_success' %>

      <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control', autofocus: true, required: true %>

      <br />

      <%= f.password_field :password, class: 'form-control', placeholder: 'Senha', autocomplete: "off", required: true %>

      <label class="checkbox">
          <span class="pull-right" style="margin-bottom: 8px">
            <a data-toggle="modal" href="login.html#myModal"> Esqueceu a senha?</a>
          </span>
      </label>

      <%= button_tag type: 'submit', class: 'btn btn-theme btn-block' do %>
          <i class="fa fa-lock"></i>
          ENTRAR
      <% end %>

      <hr>

      <div class="registration">
        NÃ£o possui uma conta?
        <br/>
        <a class="" href="#">Crie uma conta</a>
      </div>

    </div>

    <!--Modal-->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">

      <div class="modal-dialog">

        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Forgot Password ?</h4>
          </div>

          <div class="modal-body">
            <p>Enter your e-mail address below to reset your password.</p>
            <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
          </div>

          <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-theme" type="button">Submit</button>
          </div>

        </div>

      </div>

    </div>

<% end %>