<header class="header black-bg">

  <div class="sidebar-toggle-box">
    <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
  </div>

  <a href="index.html" class="logo"><b>Olavius</b></a>

  <div class="nav notify-row" id="top_menu">

    <ul class="nav top-menu">

      <li id="header_inbox_bar" class="dropdown">

        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
          <i class="fa fa-globe"></i>
        </a>

        <ul class="dropdown-menu extended inbox">

          <div class="notify-arrow notify-arrow-green"></div>

          <li>
            <p class="green">You have 5 new messages</p>
          </li>

          <li>
            <a href="index.html#">

                <span class="photo">
                  <%= image_tag 'template/ui-zac.jpg' %>
                </span>

              <span class="subject">
                  <span class="from">Zac Snider</span>
                  <span class="time">Just now</span>
                </span>

              <span class="message">Hi mate, how is everything?</span>
            </a>
          </li>

          <li>
            <a href="index.html#">

                <span class="photo">
                  <%= image_tag 'template/ui-divya.jpg' %>
                </span>

              <span class="subject">
                  <span class="from">Divya Manian</span>
                  <span class="time">40 mins.</span>
                </span>

              <span class="message">Hi, I need your help with this.</span>
            </a>
          </li>

          <li>
            <a href="index.html#">

                <span class="photo">
                  <%= image_tag 'template/ui-danro.jpg' %>
                </span>

              <span class="subject">
                  <span class="from">Dan Rogers</span>
                  <span class="time">2 hrs.</span>
                </span>

              <span class="message">Love your new Dashboard.</span>
            </a>
          </li>

          <li>
            <a href="index.html#">

                <span class="photo">
                  <%= image_tag 'template/ui-sherman.jpg' %>
                </span>

              <span class="subject">
                  <span class="from">Dj Sherman</span>
                  <span class="time">4 hrs.</span>
                </span>

              <span class="message">Please, answer asap.</span>

            </a>
          </li>

          <li>
            <a href="index.html#">See all messages</a>
          </li>

        </ul>

      </li>

    </ul>

  </div>

  <div class="top-menu">

    <ul class="nav pull-right top-menu">

      <!--Search-->
      <li>
        <%= form_tag search_users_path do %>
        <%= text_field_tag 'search', params[:search], placeholder: 'Pesquisar' %>
        <% end %>
      </li>

      <!--Logout-->
      <li>
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'logout' %>
      </li>

    </ul>
  </div>

</header>