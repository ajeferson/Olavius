<header class="header black-bg">

  <div class="sidebar-toggle-box">
    <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
  </div>

  <a href="index.html" class="logo"><b>Olavius</b></a>

  <div class="nav notify-row" id="top_menu">

    <ul class="nav top-menu">

      <li id="header_inbox_bar" class="dropdown">

        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#" id="notifications-button" data-clear-url="<%= clear_user_notifications_path(current_user) %>">
          <i class="fa fa-globe"></i>
          <% if current_user.notifications.not_read.count > 0 %>
              <span class="badge bg-theme"><%= current_user.notifications.not_read.count %></span>
          <% end %>
        </a>

        <%= render 'users/notifications' %>

      </li>

    </ul>

  </div>

  <div class="top-menu">

    <ul class="nav pull-right top-menu">

      <!--Search-->
      <li>
        <%= form_tag search_users_path do %>
            <%= text_field_tag 'search', params[:search], placeholder: 'Pesquisar' %>
        <% end %>
      </li>

      <!--Logout-->
      <li>
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'logout' %>
      </li>

    </ul>
  </div>

</header>